@model SampleCRUD.Models.InvoiceItem

<h2>Delete Invoice Item</h2>

<h3>Are you sure you want to delete this invoice item?</h3>
<div>
    <h4>Description: @Html.DisplayFor(model => model.Description)</h4>
    <p>Quantity: @Html.DisplayFor(model => model.Quantity)</p>
    <p>Unit Price: @Html.DisplayFor(model => model.UnitPrice)</p>
</div>
<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
